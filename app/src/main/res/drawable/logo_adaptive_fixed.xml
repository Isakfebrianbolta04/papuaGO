<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 1. Background Color (White) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

    <!-- 2. The Logo Image (app_logo) -->
    <!-- Padding reduced to 8dp to make the logo larger (User request: "kasih besar sedikit") -->
    <!-- This emulates the size of standard apps like Lazada/LinkedIn while keeping a small safety margin. -->
    <item
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp">
        <bitmap
            android:src="@drawable/app_logo"
            android:gravity="fill" />
    </item>
</layer-list>
