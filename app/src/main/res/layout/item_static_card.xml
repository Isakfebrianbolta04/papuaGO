<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="240dp"
    android:layout_height="220dp"
    android:layout_marginEnd="12dp"
    android:background="@drawable/menu_card_bg"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:clipToOutline="true">

    <!-- Favorite/Like Button -->
    <ImageView
        android:id="@+id/menuImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/btnLike"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="top|end"
        android:layout_margin="12dp"
        android:padding="6dp"
        android:src="@drawable/ic_favorite"
        android:background="@drawable/circle_white"
        app:tint="#D9D9D9" />

    <!-- Rating Badge -->
    <LinearLayout
        android:id="@+id/ratingLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_margin="12dp"
        android:background="@drawable/rounded_white_bg"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:gravity="center_vertical">
        
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/stars" />
            
        <TextView
            android:id="@+id/menuRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.5"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <!-- Content Area (Glass) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/menu_glass_bg"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/menuTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Destinasi"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@+id/menuSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lokasi"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:ellipsize="end"
            android:maxLines="1" />
            
        <!-- New Details Row (Duration & Transport) -->
        <LinearLayout
            android:id="@+id/extraDetailsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">
            
            <!-- Duration -->
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/jam"
                app:tint="@color/black" />
            <TextView
                android:id="@+id/menuDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Durasi"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:layout_marginStart="4dp" />
                
            <!-- Transportation -->
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_directions_car"
                android:layout_marginStart="12dp"/>
            <TextView
                android:id="@+id/menuTransport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transportasi"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:layout_marginStart="4dp"
                android:ellipsize="end"
                android:maxLines="1" />
        </LinearLayout>
        
        <!-- Price Display -->
        <TextView
            android:id="@+id/menuPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Harga"
            android:textColor="#92570B"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>
</FrameLayout>
