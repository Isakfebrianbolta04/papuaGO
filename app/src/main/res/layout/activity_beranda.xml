<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen">

    <!-- ======================= MAIN SCROLL CONTENT ======================= -->

    <ScrollView
        android:id="@+id/mainScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ======================= HEADER ======================= -->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/headerContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/header_gradient_bg"
                android:paddingTop="30dp"
                android:paddingBottom="10dp"
                android:paddingHorizontal="20dp">

                <!-- PROFIL FOTO dengan CardView -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardProfileImage"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/imgProfile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profil" />
                </androidx.cardview.widget.CardView>

                <!-- Container untuk Welcome & Username -->
                <LinearLayout
                    android:id="@+id/welcomeContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="@id/cardProfileImage"
                    app:layout_constraintEnd_toStartOf="@id/btnSettings"
                    app:layout_constraintStart_toEndOf="@id/cardProfileImage"
                    app:layout_constraintTop_toTopOf="@id/cardProfileImage">

                    <!-- WELCOME TEXT -->
                    <TextView
                        android:id="@+id/txtWelcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome Back"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:alpha="0.9" />

                    <!-- USERNAME -->
                    <TextView
                        android:id="@+id/txtUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Febrian"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <!-- SETTINGS ICON dengan background -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/btnSettings"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    app:cardCornerRadius="22dp"
                    app:cardBackgroundColor="#40FFFFFF"
                    app:cardElevation="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/settings"
                        tools:ignore="UseAppTint" />
                </androidx.cardview.widget.CardView>

                <!-- JUDUL SCROLL MENU 1 -->
                <TextView
                    android:id="@+id/txtAjak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/where_to_go"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardProfileImage" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- SCROLL MENU 1 dengan margin dari header -->
            <HorizontalScrollView
                android:id="@+id/scrollMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:clipToPadding="false"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <LinearLayout
                    android:id="@+id/menuContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- NEW: Pulau Um -->
                    <include
                        android:id="@+id/cardTopUm"
                        layout="@layout/item_static_card" />

                    <!-- NEW: Pulau Yerusel -->
                    <include
                        android:id="@+id/cardTopYerusel"
                        layout="@layout/item_static_card" />

                    <!-- NEW: Danau Uter -->
                    <include
                        android:id="@+id/cardTopUter"
                        layout="@layout/item_static_card" />

                    <!-- NEW: Danau Ayamaru -->
                    <include
                        android:id="@+id/cardTopAyamaru"
                        layout="@layout/item_static_card" />

                    <!-- NEW: Kali Sembra -->
                    <include
                        android:id="@+id/cardTopSembra"
                        layout="@layout/item_static_card" />

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Section Title dengan garis -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="32dp"
                android:paddingHorizontal="20dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/section_choose_destination"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:background="@color/divider" />
            </LinearLayout>

            <!-- SCROLL MENU 2 -->
            <HorizontalScrollView
                android:id="@+id/scrollMenu2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:clipToPadding="false"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <LinearLayout
                    android:id="@+id/menuContainer2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- DESTINATION CARDS (Unique Popular Destinations) -->
                    <!-- NEW: Sorsel Mid -->
                    <include
                        android:id="@+id/cardMidSorsel"
                        layout="@layout/item_static_card" />

                    <!-- NEW: Raja41 Mid -->
                    <include
                        android:id="@+id/cardMidRaja41"
                        layout="@layout/item_static_card" />

                    <!-- NEW: Sorong Mid -->
                    <include
                        android:id="@+id/cardMidSorong"
                        layout="@layout/item_static_card" />

                    <!-- NEW: Maybrat Mid -->
                    <include
                        android:id="@+id/cardMidMaybrat"
                        layout="@layout/item_static_card" />

                    <!-- NEW: Tambrauw Mid -->
                    <include
                        android:id="@+id/cardMidTambrauw"
                        layout="@layout/item_static_card" />

                </LinearLayout>
            </HorizontalScrollView>

            <!-- DESTINASI POPULER -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="32dp"
                android:paddingHorizontal="20dp">

                <TextView
                    android:id="@+id/txtDestinasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/section_popular_destinations"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:background="@color/divider" />
            </LinearLayout>

            <!-- FOTO BULAT dengan CardView -->
            <HorizontalScrollView
                android:id="@+id/scrollCircleImages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="20dp"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:clipToPadding="false"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- ITEM 1 -->
                    <LinearLayout
                        android:id="@+id/btnCircle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:layout_marginEnd="20dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            app:cardCornerRadius="45dp"
                            app:cardElevation="4dp">

                            <ImageView
                                android:id="@+id/imgCircle1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/txtCircle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sorong_selatan"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                    <!-- ITEM 2 -->
                    <LinearLayout
                        android:id="@+id/btnCircle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:layout_marginEnd="20dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            app:cardCornerRadius="45dp"
                            app:cardElevation="4dp">

                            <ImageView
                                android:id="@+id/imgCircle2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/txtCircle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/kota_sorong"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                    <!-- ITEM 3 -->
                    <LinearLayout
                        android:id="@+id/btnCircle3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:layout_marginEnd="20dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            app:cardCornerRadius="45dp"
                            app:cardElevation="4dp">

                            <ImageView
                                android:id="@+id/imgCircle3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/txtCircle3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/waisai"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                    <!-- ITEM 4 -->
                    <LinearLayout
                        android:id="@+id/btnCircle4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:layout_marginEnd="20dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            app:cardCornerRadius="45dp"
                            app:cardElevation="4dp">

                            <ImageView
                                android:id="@+id/imgCircle4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/txtCircle4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/maybrat"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                    <!-- ITEM 5 -->
                    <LinearLayout
                        android:id="@+id/btnCircle5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:id="@+id/imgCircle5"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/circle_mask"
                            android:clipToOutline="true"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:id="@+id/txtCircle5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tambrauw"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

    <!-- ======================= BOTTOM NAVIGATION ======================= -->

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_nav"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- HOME -->
        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iconHome"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/vector"
                    android:layout_gravity="center"
                    app:tint="@color/brand_brown" />
            </FrameLayout>

            <TextView
                android:id="@+id/txtHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/nav_home"
                android:textColor="@color/brand_brown"
                android:textSize="11sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- EXPLORE -->
        <LinearLayout
            android:id="@+id/navExplore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iconExplore"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/search"
                    android:layout_gravity="center"
                    app:tint="@color/brand_brown" />
            </FrameLayout>

            <TextView
                android:id="@+id/txtExplore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/nav_explore"
                android:textColor="@color/brand_brown"
                android:textSize="11sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- ORDER -->
        <LinearLayout
            android:id="@+id/navOrder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iconOrder"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/pesanan"
                    android:layout_gravity="center"
                    app:tint="@color/brand_brown" />
            </FrameLayout>

            <TextView
                android:id="@+id/txtOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/nav_order"
                android:textColor="@color/brand_brown"
                android:textSize="11sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- PROFILE -->
        <LinearLayout
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iconProfile"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_person"
                    android:layout_gravity="center"
                    app:tint="@color/brand_brown" />
            </FrameLayout>

            <TextView
                android:id="@+id/txtProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/nav_profile"
                android:textColor="@color/brand_brown"
                android:textSize="11sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
