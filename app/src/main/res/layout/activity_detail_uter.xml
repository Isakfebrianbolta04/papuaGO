<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFCFC">

    <!-- Gambar Header -->

    <!-- Tombol Kembali -->
    <ImageView
        android:id="@+id/headerImage"
        android:layout_width="422dp"
        android:layout_height="307dp"
        android:scaleType="centerCrop"
        android:src="@drawable/uter"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-5dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:src="@drawable/kembali"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- CARD PUTIH -->
    <LinearLayout
        android:id="@+id/detailCard"
        android:layout_width="411dp"
        android:layout_height="239dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="-40dp"
        android:background="@drawable/rounded_white_big"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerImage">

        <!-- Title + Price (space-between effect) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Danau Uter"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_gray"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:text="50.000/ Mobil"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Ringkasan -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Ringkasan"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Durasi + Rating -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <!-- Durasi -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/jam" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Durasi 5 Jam"
                    android:textColor="#000"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Rating -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/stars" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Rating 70.5%"
                    android:textColor="#000"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Deskripsi -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_marginTop="12dp"
            android:text="Danau Uter merupakan salah satu destinasi wisata yang populer di kabupaten maybrat. Salah satu tempat wisata yang menyajikan danu yang sangat jernih dan biru dan tentu sangat cocok untuk berlibur besarama, keluarga disini. "
            android:textColor="#444"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Tombol Pesan -->
    <Button
        android:id="@+id/btnOrder"
        android:layout_width="200dp"
        android:layout_height="53dp"
        android:layout_marginTop="136dp"
        android:background="@drawable/btn_coklat"
        android:text="Pesan Sekarang"
        android:textColor="#fff"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detailCard" />

</androidx.constraintlayout.widget.ConstraintLayout>
