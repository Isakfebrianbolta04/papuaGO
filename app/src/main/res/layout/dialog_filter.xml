<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_white_bg"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filter &amp; Urutkan"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Urutkan Berdasarkan"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="8dp"/>

    <RadioGroup
        android:id="@+id/sortGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbRelevance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paling Relevan"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/rbLowestPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Harga Terendah"/>

        <RadioButton
            android:id="@+id/rbHighestPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Harga Tertinggi"/>

        <RadioButton
            android:id="@+id/rbHighestRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rating Tertinggi"/>
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        android:layout_marginVertical="16dp"/>

    <Button
        android:id="@+id/btnApplyFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Terapkan"
        android:backgroundTint="@color/brand_brown"
        android:textColor="@android:color/white"/>

</LinearLayout>
